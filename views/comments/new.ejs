<%- include("../partials/header") %>

<div id="new-comment-form" class="container w-50">
	<h1 class="display-4 text-center">Add New Comment to <%= campground.name %></h1>
	<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
		<div class="form-group">
			<label for="inputCommText">Text:</label>
			<input type="text" class="form-control" id="inputCommText" name="comment[text]">
		</div>
		<button type="submit" class="btn btn-primary btn-block my-4">Submit</button>
	</form>
	<a href="/campgrounds/<%= campground._id %>">Go Back</a>
</div>

<%- include("../partials/footer") %>
<%- include("../partials/header") %>

<div id="edit-campground-form" class="container w-50">
	<h1 class="display-4 text-center">Edit <%= campground.name %></h1>
	<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<label for="inputCampName">Campground name:</label>
			<input type="text" class="form-control" id="inputCampName" name="campground[name]" value="<%= campground.name %>">
		</div>
		<div class="form-group">
			<label for="inputCampImg">Campground image url:</label>
			<input type="URL" class="form-control" id="inputCampImg" name="campground[image]" value="<%= campground.image %>">
		</div>
		<div class="form-group">
			<label for="inputCampDesc">Campground description:</label>
			<input type="text" class="form-control" id="inputCampDesc" name="campground[description]" value="<%= campground.description %>">
		</div>
		<div class="form-group">
			<label for="inputCampPrice">Campground price per night:</label>
			<input type="number" class="form-control" id="inputCampPrice" name="campground[price]" value="<%= campground.price %>">
		</div>
		<button type="submit" class="btn btn-primary btn-block my-4">Submit</button>
	</form>
	<a href="/campgrounds/<%= campground._id %>">Go Back</a>
</div>

<%- include("../partials/footer") %>
<%- include("../partials/header") %>

<div class="container">
	
	<div class="jumbotron">
  		<h1 class="display-4">All our campgrounds!</h1>
  		<p class="lead">View our hand-picked campgrounds from all over the world.</p>
  		<hr class="my-4">
  		<p>To add new campground or comment to an existing one - please register or login.</p>
  		<a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campground</a>
	</div>
	
	<div class="row text-center">
		<% campgrounds.forEach((campground) => { %>
			<div class="col-lg-3 col-md-4 col-sm-6">
				<div class="card mb-2">
					<img src="<%= campground.image %>" class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title"><%= campground.name %></h5>
    					<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
					</div>
				</div>
			</div>
		<% }); %>
	</div>

		
</div>

<%- include("../partials/footer") %>
